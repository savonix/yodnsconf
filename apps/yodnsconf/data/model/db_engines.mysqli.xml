<db_engines>
  <engine_default_timestamp>
    <text>CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP</text>
  </engine_default_timestamp>

  <engine_auto_increment>
			<text>int(11) NOT NULL auto_increment</text>
  </engine_auto_increment>

  <engine_increment_start>
    <text>AUTO_INCREMENT=1</text>
  </engine_increment_start>

  <engine_auto_increment_b>
      <text>, PRIMARY KEY (category_id)</text>
  </engine_auto_increment_b>

  <innodb_engine>
			<text>ENGINE=InnoDB</text>
    </innodb_engine>

  <myisam_engine>
        <text>ENGINE=MyISAM</text>
  </myisam_engine>

  <if_not_exists>
			<text>IF NOT EXISTS </text>
  </if_not_exists>

  <integer>
      <text>int(10)</text>
  </integer>

</db_engines>
