<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="hostgroup_create_hosts" loop="//_post/host_id" default="1">
	<connection>&connection;</connection>
	<params>
		<param name="_post/hostgroup_id" type="integer"/>
		<param array="_post/host_id" type="integer" default="0"/>
	</params>
	<sql>
	INSERT INTO &prefix;hostgroup_hosts (hostgroup_id,host_id) VALUES (?,?)
	</sql>
</query>
