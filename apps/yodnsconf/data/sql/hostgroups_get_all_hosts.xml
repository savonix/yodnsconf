<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="hostgroups_get_all_hosts">
	<connection>&connection;</connection>
	<params>
		<param name="_get/hostgroup_id" type="text" default="%"/>
	</params>
	<sql>
	SELECT h.host,hgs.id FROM &prefix;hostgroups AS hgs,&prefix;hostgroup_hosts AS hgh,&prefix;hosts AS h
	WHERE hgs.id LIKE ?
	AND hgs.id=hgh.hostgroup_id
	AND hgh.host_id=h.id
	</sql>
</query>
